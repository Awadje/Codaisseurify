
<%= form_for @artist, html: { multipart: true } do |f| %>

  <div id="photos">
  <%= render 'photos/list' %>
  </div>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <label>Photos</label>

<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
</div>

  <hr>
<strong><h3>Existing Songs:</strong> Check/Uncheck to update</h3>
  <%= f.label :song_title %>
  <%= f.collection_check_boxes(:song_ids, Song.all, :id, :song_title) %>

  <hr>

  <%= f.submit (@artist.new_record? ? "Create" : "Update") %>
  <h3><%= link_to "New Song", new_song_path %></h3>
<% end %>

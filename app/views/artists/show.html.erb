<h1>Original Artist Show Page</h1>
<hr>
<h2><%= @artist.name %></h2>

<p>Original Artist Name: <%= @artist.name %></p>
<p>Bio: <%= @artist.bio %></p>


<hr>

<h3>Songs by original artist:</h3>

<% @artist.songs.each do |song| %>
    <p><%= link_to song.song_title, song_path(song.id) %></p>
<% end %>


<%= link_to "[Edit]", edit_artist_path(@artist.id) %>
<%= link_to "[Delete]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>
